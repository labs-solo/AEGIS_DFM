+    /*
+        Internal sqrt with **roundup** semantics (v3 parity)
+    */
+    function _sqrtRoundingUp(uint256 x) private pure returns (uint256 y) {
+        if (x == 0) return 0;
+        y = x;
+        uint256 z = (x >> 1) + 1;
+        while (z < y) { y = z; z = (x / z + z) >> 1; }
+        unchecked { if (y * y < x) ++y; }
+    }
